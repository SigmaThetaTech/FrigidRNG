{
    "[markdown]": {
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        }
    },
    "editor.formatOnSave": true,
    "editor.tabCompletion": "on",
    "luau-lsp.completion.imports.enabled": true,
    "luau-lsp.completion.imports.suggestServices": true,
    "luau-lsp.completion.imports.suggestRequires": true,
    "luau-lsp.require.mode": "relativeToWorkspaceRoot",
    "luau-lsp.require.directoryAliases": {
        "@Packages": "Packages/",

        "@Client": "src/Client/",
        "@UI": "src/Client/UI/",
        "@Components": "src/Client/UI/Components/",
        "@ClientModules": "src/Client/ClientModules/",
        "@Controllers": "src/Client/Controllers/",

        "@Shared": "src/Shared/",
        "@SharedModules": "src/Shared/SharedModules/",
        "@Network": "src/Shared/Network.luau",

        "@Server": "src/Server/",
        "@ServerModules": "src/Server/ServerModules/",
        "@Services": "src/Server/Services/",
    },
    "roblox-ui.explorer.showClassNames": true,
    "roblox-ui.explorer.showDataModel": true,
    "roblox-ui.sourcemap.rojoProjectFile": "default.project.json",
}